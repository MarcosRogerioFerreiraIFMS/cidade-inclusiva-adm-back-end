generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Noticia {
  id             String           @id @default(uuid())
  titulo         String
  conteudo       String
  dataPublicacao DateTime         @default(now())
  categoria      CategoriaNoticia
  url            String?          @default("")
  foto           String?          @default("")
  criadoEm       DateTime         @default(now())
  atualizadoEm   DateTime         @updatedAt
}

enum CategoriaNoticia {
  DIREITOS
  BENEFICIOS
  OPORTUNIDADES
  TECNOLOGIA
  TRABALHO
  SAUDE
  EDUCACAO
  CULTURA
  EVENTOS
  ESPORTE
  ACESSIBILIDADE
  OUTROS
}
